{
    "name": "New Tab Simple Text Editor",
    "description": "A simple text editor that is shown on every new tab you open. And doesn't require any scary permission.",

    "version": "0.4",
    "incognito": "split",
    "chrome_url_overrides": {
        "newtab": "blank.html"
    },
    "icons": { 
        "16": "16.png",
        "48": "48.png",
        "128": "128.png" 
    },
    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },
    "permissions": [
        "storage"
    ],
    "browser_action": {},
    "manifest_version": 2
}
